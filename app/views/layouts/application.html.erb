<!DOCTYPE html>
<html>
<head>
  <title>Hoptopus</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="top">
	<h1>Hoptopus</h1>

	<div id="navigation">
		<ul>
		<% if is_logged_in? %>
			<li><%= link_to 'Brews Wiki', brews_path %></li>
			<li><%= link_to 'Logout', logout_path %></li>
		<% else %>
			<li><%= link_to 'Login', login_path %></li>
			<li><%= link_to 'Register', register_path %></li>
		<% end %>
		</ul>
	</div>
</div>

<div id="content">
	<%= yield %>
</div>

</body>
</html>
