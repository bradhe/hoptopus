<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> / hoptopus</title>
  <%= stylesheet_link_tag :all %>
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" type="text/javascript"></script>
  <script src="/javascripts/jquery.tablesorter.min.js" type="text/javascript"></script>
  <script src="/javascripts/jquery.hoptopus.js" type="text/javascript"></script>

<% if Rails.env.production? %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-20887375-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  
  <script type="text/javascript">
    var is_ssl = ("https:" == document.location.protocol);
    var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
    document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));
  </script>

  <script type="text/javascript" charset="utf-8">
    var feedback_widget_options = {};
    feedback_widget_options.display = "overlay";  
    feedback_widget_options.company = "hoptopus";
    feedback_widget_options.placement = "right";
    feedback_widget_options.color = "#85AF22";
    feedback_widget_options.style = "idea";
    var feedback_widget = new GSFN.feedback_widget(feedback_widget_options);
  </script>
<% end %>

  <%= csrf_meta_tag %>
  
  <%= yield :javascript %>
</head>

<body>

<div id="top">
  <h1><a href="<%= absolute_url root_path %>"><img src="/images/beers.png" alt="some beer!" border="0" /> hoptopus <span class="beta">beta!</span></a></h1>

  <div id="navigation">
    <ul>
    <% if is_logged_in? %>
      <li>Howdy <strong><%= @user.username %></strong>!</li>
      <li><%= link_to 'My Cellar', cellar_path(@user.username) %></li>
      <li><%= link_to 'Browse Cellars', root_path %></li>
      <li><%= link_to 'Brew Wiki', brews_path %></li>
      <li><%= link_to 'Logout', logout_path %></li>
    <% else %>
      <li><%= link_to 'Browse Cellars', cellars_path %></li>
	  <li><%= link_to 'Brew Wiki', brews_path %></li>
      <li><%= link_to 'Register', register_path %></li>
      <li><%= link_to 'Login', login_path %></li>
    <% end %>
    </ul>
  </div>
</div>

<div class="content-wrapper">
  <div id="content">
    <%= yield %>
  </div>
</div>
  
<div id="bottom">
  Copyright 2010 &copy; The Hoptopus People <%= link_to 'Contact', contact_index_path %> | <a href="http://hoptopus.posterous.com/">Blog</a>
</div>

</body>
</html>
