<% content_for :title do %>
  select a username
<% end %>

<h2>Select a Username</h2>

<p>You won't be able to do anything else unless you select a username first!</p>

<div class="centered">
  <% unless @user.errors.empty? %>
  <ul class="errors">
    <% @user.errors.each do |element,msg| %>
		<li><%= msg %></li>
  	<% end %>
  </ul>
  <% end %>

  <%= form_tag update_username_path do |f| %>
    <%= label_tag 'username', 'Username:' %>
    <%= text_field_tag 'username', @username %>

    <div class="buttons">
      <button type="submit">Set Username</button>
    </div>
  <% end %>
</div>
