<% content_for :title do %>
	brews wiki
<% end %>

<% if is_logged_in? %>
	<div class="navigation"><%= link_to 'Add a Beer', new_brew_path %> <%= link_to 'Add a Brewery', new_brewery_path %></div>
<% end %>
	
<% if notice %>
	<div class="notice"><%= notice %></div>
<% end %>
<h2>Brew Wiki</h2>

<h2 data-tab-handle="recent-activity">Recent Activity</h2>
<div id="recent-activity">
	<ul class="events">
	<% if @recent_events.nil? or @recent_events.empty? %>
		<li class="empty">How sad, no one is doing ANYTHING on this site :( Maybe someone should go <%= link_to 'groom the wiki?', brews_path %></li>
	<% else %>
		<% @recent_events.each do |event| %>
			<%== render_event event %>
		<% end %>
	<% end %>
	</ul>
</div>

<h2 data-tab-handle="brews">Brews</h2>
<div id="brews">
    <table class="list" <%= is_table_sortable? @brews %>>
        <thead>
          <tr>
            <th>Beer</th>
            <th>Type</th>
            <th>Brewery</th>
    <% if is_logged_in? %>
            <th class="unsortable"></th>
            <th class="unsortable" width="70"></th>
    <% end %>
          </tr>
        </thead>
        
        <tbody>
    <% if @brews.empty? %>
      <tr>
        <td colspan="3" class="empty">Oh god! No beers have been added!</td>
      </tr>
    <% else %>
        <% c = 'color2' %>
        <% @brews.each do |brew| %>
            <% c = (c == 'color2' ? 'color1' : 'color2') %>
      <tr class="<%= c %>">
            <td><%= link_to brew.name, brew_path(brew) %></td>
            <td><%= brew.brew_type.name %></td>
            <td><%= brew.brewery.name %></td>
        <% if is_logged_in? %>
            <td align="center"><%= link_to 'Edit', edit_brew_path(brew) %></td>
            <td align="center"><%= button_to 'Delete', brew_path(brew), :method => :delete, :confirm => 'You sure?' %></td>
        <% end %>
      </tr>
        <% end %>
    <% end %>
        </tbody>
    </table>
</div>

<h2 data-tab-handle="breweries">Breweries</h2>
<div id="breweries">
    <table class="list">
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>State</th>
        <th>City</th>
        <th></th>
      </tr>

    <% if @breweries.empty? %>
      <tr>
        <td colspan="5" class="empty">Fuck! No breweries have been added!</td>
      </tr>
    <% else %>
        <% c = 'color2' %>
        <% @breweries.each do |brewery| %>
            <% c = (c == 'color2' ? 'color1' : 'color2') %>
      <tr class="<%= c %>">
        <td><%= brewery.name %></td>
        <td><%= brewery.country %></td>
        <td><%= brewery.state %></td>
        <td><%= brewery.city %></td>
        <td align="right"><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
      </tr>
        <% end %>
    <% end %>
    </table>
</div>
