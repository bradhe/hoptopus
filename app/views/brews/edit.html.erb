<h1>Edit Brew</h1>

<%= form_for(@brew) do |f| %>
  <% if @brew.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brew.errors.count, "error") %> prohibited this brew from being saved:</h2>

      <ul>
      <% @brew.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :brewery_id, 'Brewery:' %>
    <span id="brewer_id"><%= @brew.brewery.name %></span>
  </div>
  <div class="actions">
    <%= f.submit %> <%= link_to 'Back', brews_path %>
  </div>
<% end %>

