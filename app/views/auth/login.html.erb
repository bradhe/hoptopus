<% content_for :title do %>
	login
<% end %>

<div class="login">
	<p class="note">No account? <%= link_to 'Register', '/register' %></p>

	<% if request.post? and @user.nil? %>
		<ul class="errors">
			<li>Invalid username or password.</li>
		</ul>
	<% end %>

  <% @login_postback_url ||= '/login' %>
  
	<% form_tag @login_postback_url, :method => 'post' do %>
		<div class="field"><%= label_tag :username, "Username:" %> <%= text_field_tag :username %></div>
		<div class="field"><%= label_tag :password, "Password:" %> <%= password_field_tag :password %></div>

		<div class="buttons">
			<span class="note"><%= link_to 'Reset Password', request_password_reset_path %></span> <%= submit_tag 'Login' %>
		</div>
	<% end %>
</div>