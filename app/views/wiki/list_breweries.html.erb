<% content_for :title do %>
    breweries / wiki
<% end %>

<div class="navigation">
    <%= link_to 'Back to Wiki Index', wiki_index_path + '#breweries'  %>
</div>

<h2>Breweries</h2>

<div class="letters-list"><%= first_letters_link_list %></div>

<table class="list" data-sortable>
    <thead>
      <tr>
        <th>Brewery</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
      </tr>
    </thead>

    <tbody>
<% if @breweries.empty? %>
      <tr>
        <td colspan="3" class="empty">Oh god! No beers have been added!</td>
      </tr>
<% else %>
    <% c = 'color2' %>
    <% @breweries.each do |brewery| %>
        <% c = (c == 'color2' ? 'color1' : 'color2') %>
      <tr class="<%= c %>">
        <td><%= link_to brewery.name, brewery_path(brewery) %></td>
        <td><%= brewery.city %></td>
        <td><%= brewery.state %></td>
        <td><%= brewery.country %></td>
      </tr>
    <% end %>
<% end %>
    </tbody>
</table>
