<% content_for :title do %>
    contact the hoptopus
<% end %>

<h2>Contact The Hoptopus</h2>

<h3>Prefer the Phone?</h3>
Reach Brad, the guy behind the Hoptopus, at <strong>+1 (971) 285-4712</strong>

<h3>How about an email?</h3>

<ul class="errors">
	<% @contact_request.errors.each do |element,msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>

<% form_for(@contact_request, :url => contact_index_path) do |f| %>
	<div class="field">
		<%= f.label :email, 'Your email:' %>
		<%= f.text_field :email %>
	</div>
	
	<div class="field">
		<%= f.label :subject, 'Subject:' %>
		<%= f.text_field :subject %>
	</div>
	
	<div class="field">
		<%= f.text_area :body %>
	</div>
	
	<div class="buttons">
		<button type="submit">Send Contact Request</button>
		<%= link_to 'Back', root_url %>
	</div>
<% end %>
